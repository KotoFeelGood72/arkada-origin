extends _layout

block vars
	- array = {body_class:'', layout_mod:'', sub_keywords:'', title_inner:'Деловые консультации'}
block content_block
	+singleHead({
		img: 'development',
		page: 'Проекты',
		title: array.title_inner,
		tag: ['Контекстная реклама', 'Web-разработка']
	})
	section.workSingle 
		.section_in 
			.workSingle_main 
				+serviceWork
				+target
				.designBlock.global-mb 
					.designBlock_head.global_txt 
						h4 Дизайн сайта
						p Специализируясь на разработке сайтов под ключ и продвижении, мы проводим комплексную работу, которая дает гарантированный результат.
						p Слаженные действия специалистов позволяют максимально настроить всю работу на реализацию поставленных целей и задач.
					.designBlock_gallery 
						.designBlock_img 
							img(src="i/single/des1.jpg", alt="")
						.designBlock_img 
							img(src="i/single/des2.jpg", alt="")
				.adaptiveBlock.global-mb 
					.adaptiveBlock_head 
						h4 Адаптив сайта
						p Специализируясь на разработке сайтов под ключ и продвижении, мы проводим комплексную работу, которая дает гарантированный результат.
					.adaptiveImg_gallery
						ul
							li 
								img(src="i/single/mobile.png", alt="")
							li 
								img(src="i/single/tablet.png", alt="")
							li 
								img(src="i/single/desktop.png", alt="")
				.workSlider_block 
					+sectionHead({
						title: 'Другие проекты',
						class: 'workSlider'
					})
					.workSlider_w.global-mb
						.workSlider_slider.swiper 
							.swiper-wrapper
								-for(i = 0; i < 12; i++) 
									.swiper-slide 
										.project_item.hovered-transform 
											a(href="#")
												.project_item_img
													img(src="i/project/project.jpg", alt="")
												.project_item_content 
													h3.small-title Дизайн интерьера “WP Interior design”
													ul.project_tag_list 
														each item in ['Web-разработка', 'Контекстная реклама']
															li 
																a(href="#")=`#${item}`
