// Tech // 

mixin tech 
	section.tech 
		.section_in
			.tech_main.global-mb 
				.tech_title 
					h3 Технологии, которые используем
				ul.tech_list 
					-for(i = 0; i < 8; i++)
						- var img = 'i/tech/tech_' + i + '.png'
							li.tech_item 
								img(src=img, alt="")


// End

// Service
mixin service 
	ul.service_grid.grid-3 
		-for(i = 0; i < 6; i++)
			li.service_item.hovered-el 
				a(href="#")
					.service_item_head
						.service_item_title 
							h3.small-title Разработка сайтов
						.service_item_txt 
							p Сайт, разработанный в нашей студии, поможет вашим клиентам получить информацию о вашей компании и её услугах.
					.service_item_link 
						p Подробнее
						.service_itemLink_icon
							+icon('arrow')



