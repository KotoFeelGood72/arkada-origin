// Input

mixin input(data)
	.global_input(class=data.class ? data.class : data.class="footer_input")
		input(type=data.type ? data.type : data.type="text" placeholder=data.place ? data.place : data.place="Ваше имя")


mixin full-input(data)
	.full_input--w.global_input 
		label.fz20(for=`quiz-${data.id}`)
			.label-w
				p=data.name 
				span *
			if data.txt 
				span=data.txt
		.full_input 
			input(type=data.type ? data.type : data.type="text" id=`quiz-${data.id}` required class=`qui-${data.id}` autocomplete="false")
// End mixin 




// Project list

mixin project 
	ul.project_grid.grid-3 
		-for(i = 0; i < 6; i++)
			li.project_item.hovered-transform 
				.project_item_img
					a(href="#") 
						img(src="i/project/project.jpg", alt="")
				.project_item_content
					a(href="#") 
						h3.small-title Дизайн интерьера “WP Interior design”
					ul.project_tag_list 
						each item in ['Web-разработка', 'Контекстная реклама']
							li 
								a(href="#")=`#${item}` 


// End

// Head section
mixin sectionHead(data)
	.section_head.section_title(class=`${data.class}_head`)
		.section_head_title
			h4=data.title
		.slider_nav(class=`${data.class}_nav`)
			.slider_btn_nav.btn(class=`${data.class}_btn_prev`)
				button(type="button")
					+icon('prev')
			.slider_btn_nav.btn(class=`${data.class}_btn_next`)
				button(type="button")
					+icon('next')

