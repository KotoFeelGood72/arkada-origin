// Tech // 

mixin tech 
	section.tech 
		.section_in
			.tech_main 
				.tech_title 
					h3 Технологии, которые используем
				ul.tech_list 
					-for(i = 0; i < 7; i++)
						- var img = 'i/tech/tech_' + i + '.png'
							li.tech_item 
								img(src=img, alt="")


// End

// Service
mixin service 
	ul.service_grid 
		-for(i = 0; i < 6; i++)
			li.service_item 
				a(href="#")
					.service_item_head
						.service_item_title 
							h3 Разработка сайтов
						.service_item_txt 
							p Сайт, разработанный в нашей студии, поможет вашим клиентам получить информацию о вашей компании и её услугах.
					.service_item_link 
						p Подробнее
						.service_itemLink_icon
							+icon('arrow')



// 

// Input

mixin input(data)
	.global_input(class=data.class ? data.class : data.class="footer_input")
		input(type=data.type ? data.type : data.type="text" placeholder=data.place ? data.place : data.place="Ваше имя")

// End mixin 




// Project list

mixin project 
	ul.project_grid 
		-for(i = 0; i < 6; i++)
			li.project_item 
				a(href="#")
					.project_item_img
						img(src="i/project/project.jpg", alt="")
					.project_item_content 
						h3 Дизайн интерьера “WP Interior design”
						ul.project_tag_list 
							each item in ['Web-разработка', 'Контекстная реклама']
								li 
									a(href="#")=`#${item}` 


// End

// Head section
mixin sectionHead(data)
	.section_head(class=`${data.class}_head`)
		.section_head_title
			h4=data.title
		.slider_nav(class=`${data.class}_nav`)
			.slider_btn_nav(class=`${data.class}_btn_prev`)
				button(type="button")
					+icon('prev')
			.slider_btn_nav(class=`${data.class}_btn_next`)
				button(type="button")
					+icon('next')

// 

// Partners
mixin partners
	section.partners 
		.section_in 
			.partners_main 
				+sectionHead({
					title: 'Наши партнеры',
					class: 'partners'
				})
				.partners_slider_w 
					.partners_slider.swiper 
						.swiper-wrapper
							-for(i = 0; i < 12; i++) 
								.swiper-slide 
									.partners_slide 
										img(src="i/partners/partners.png", alt="")

// End

// Content block //

mixin content_block(data)
	.content_block 
		.content_block_img 
			img(src=`i/${data.img}.jpg`, alt="")
		.content_block_txt 
			h2 Наша миссия
			.content_block_description.global_txt.custom_list
				if data.txt === true 
					p Наша миссия — получение вами необходимого результата от проекта.
					p Не важно, какова ваша цель — увеличение прибыли компании, оптимизация рабочих процессов или просто создание личного пространства в интернете. Мы поможем вам в решении любых задач.
					p Мы не работаем по шаблону и к каждому новому проекту относимся как к новому и уникальному опыту, возможности создать нечто неповторимое, что будет радовать вас и приносить пользу годы.
					p Наши менеджеры всегда готовы учесть ваши идеи и личные предпочтения, сориентировать, предложить свежие и новые идеи, помочь вам с составлением технического задания для получения уникального проекта. Наш технический отдел обладает огромным опытом, но также любит и умеет осваивать новые технологии для более качественного решения поставленных задач.
				else 
					ul 
						li Если у вас есть сайт, и вы хотите, чтобы его находили в интернете;
						li Вы хотите сэкономить на рекламе и привлечь внимание аудитории;
						li Вы хотите обеспечить постоянный рост и развитие сайта;
						li Вы хотите создать стабильный поток целевой аудитории.
			if data.btn === true 
				.content_block_link.btn 
					a(href="#") Заказать

// END //



// Single template head

mixin singleHead(data)
	section.singleTemplate_head(background=`i/single/${data.img}.jpg`) 
		.section_in 
			.singleTemplate_head_main 
				+bread(['Главная', `${data.page}`], data.title)
				h1=data.title
				p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
				if data.btn === true
					.trigger_popup.btn 
						button(type="button") Оставить заявку
				if data.tag
					ul
						each item in data.tag 
							li=item


// END

// Text block standart

mixin txt_block(data)
	.defaultBlock 
		.defaulBlock_title 
			h2=data.title 
		.defaultBlock_txt.global_txt
			p Поисковая оптимизация — комплекс мероприятий по внутренней и внешней оптимизации для поднятия позиций сайта в результатах выдачи поисковых систем по определённым запросам пользователей, с целью увеличения сетевого трафика (для информационных ресурсов) и потенциальных клиентов (для коммерческих ресурсов) и последующей монетизации (получение дохода) этого трафика.
			p Наши специалисты выполнят все необходимые работы и помогут вам продвинуть сайт в ТОП поисковых систем Яндекс и Google.

// End //

